<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/colorAccent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_default_avatar"
        app:layout_constraintBottom_toTopOf="@+id/drawer_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/drawer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Jonathan Hannah"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/paragraph"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/drawer_surveyor_code"
        app:layout_constraintStart_toStartOf="@+id/drawer_dp" />

    <TextView
        android:id="@+id/drawer_surveyor_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TRWESADU43"
        android:textColor="#8AFFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/drawer_name" />


</android.support.constraint.ConstraintLayout>